{
    "version": "2.0.0",
    "tasks": [
        // Build tasks
        {
            "label": "build ekf_cal",
            "detail": "Build ekf_cal package",
            "type": "shell",
            "command": "colcon build --symlink-install --packages-select ekf_cal --cmake-args -DCMAKE_BUILD_TYPE=Release",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
        },
        {
            "label": "build coverage",
            "detail": "Build ekf_cal package with covereage symbols",
            "type": "shell",
            "command": "colcon build --symlink-install --packages-select ekf_cal --event-handlers console_cohesion+ --cmake-args -DCMAKE_C_FLAGS='--coverage' -DCMAKE_CXX_FLAGS='--coverage'",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
        },
        // Testing Tasks
        {
            "label": "all tests",
            "detail": "Run all unit tests and static analysis.",
            "type": "shell",
            "command": "colcon test --packages-select ekf_cal --event-handlers console_direct+",
            "group": "test",
            "dependsOn": "build ekf_cal",
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
        },
        {
            "label": "test coverage",
            "detail": "Build ekf_cal package with covereage symbols",
            "type": "shell",
            "command": "rm -r lcov; colcon test --packages-select ekf_cal --pytest-with-coverage --pytest-args --cov-report=term --event-handlers console_direct+",
            "group": "test",
            "problemMatcher": "$gcc",
            "dependsOn": "build coverage",
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
        },
        // Documentation Tasks
        {
            "label": "report coverage",
            "detail": "Build ekf_cal package with covereage symbols",
            "type": "shell",
            "command": "colcon lcov-result --packages-select ekf_cal --filter '*_test.cpp' '*_main.cpp'",
            "group": "test",
            "problemMatcher": "$gcc",
            "dependsOn": "test coverage",
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
        },
        {
            "label": "doxygen",
            "detail": "Build ekf_cal documentation",
            "type": "shell",
            "command": "doxygen .doxyfile",
            "group": "none",
            "problemMatcher": "$gcc",
            "dependsOn": "cloc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "doxygen-pdf",
            "detail": "Build ekf_cal documentation as single pdf",
            "type": "shell",
            "command": "cd docs/doxygen/latex && make",
            "group": "none",
            "problemMatcher": "$gcc",
            "dependsOn": "doxygen",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "cloc",
            "detail": "Count Lines of Code",
            "type": "shell",
            "command": "echo 'Count Lines of Code {#cloc}\n============' > docs/software/cloc.md && cloc . --exclude-lang=CSS,CSV,HTML,JavaScript,make,SVG,TeX --md | tail -n +4 >> docs/software/cloc.md && sed -i 's/--------|--------|--------|--------|--------/| | | | | |/' docs/software/cloc.md",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "doxygen and coverage",
            "detail": "Build ekf_cal documentation with coverage report",
            "type": "shell",
            "command": "doxygen .doxyfile",
            "group": "none",
            "problemMatcher": "$gcc",
            "dependsOn": [
                "report coverage",
                "cloc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        // Debug Tasks
        {
            "label": "debug ekf_cal",
            "detail": "Build ekf_cal package with debug symbols",
            "type": "shell",
            "command": "colcon build --symlink-install --packages-select ekf_cal --cmake-args '-DCMAKE_BUILD_TYPE=Debug'",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/../../"
            },
        },
        // Source workspace
        {
            "label": "source-workspace",
            "detail": "Sources the current workspace with bash",
            "type": "shell",
            "command": "source ${workspaceFolder}/../../install/setup.bash",
            "problemMatcher": "$gcc"
        },
        {
            "label": "build-joss-paper",
            "detail": "Builds JOSS paper using docker image",
            "type": "shell",
            "command": "docker run --rm --volume $PWD/docs/paper:/data --user $(id -u):$(id -g) --env JOURNAL=joss openjournals/inara",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ],
}